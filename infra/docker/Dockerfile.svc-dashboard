FROM rust:1.91 as builder
WORKDIR /app
COPY . .
RUN cargo build --release --bin svc-dashboard

FROM debian:bookworm-slim
RUN apt-get update && apt-get install -y ca-certificates && rm -rf /var/lib/apt/lists/*
COPY --from=builder /app/target/release/svc-dashboard /usr/local/bin/svc-dashboard
ENTRYPOINT ["svc-dashboard"]