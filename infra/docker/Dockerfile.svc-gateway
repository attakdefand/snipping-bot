FROM rust:1.80 as build
WORKDIR /app
COPY . .
RUN apt-get update && apt-get install -y pkg-config libssl-dev && \
    cargo build --release -p svc-gateway

FROM debian:stable-slim
WORKDIR /app
COPY --from=build /app/target/release/svc-gateway /usr/local/bin/svc-gateway
ENV RUST_LOG=info
CMD ["svc-gateway"]
